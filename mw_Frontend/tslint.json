{

    "rulesDirectory": ["tslint-consistent-codestyle"],

    "jsRules": {

        "class-name": true,

        "comment-format": [

            true,

            "check-space"

        ],

        "indent": [

            true,

            "spaces"

        ],

        "no-duplicate-variable": true,

        "no-eval": true,

        "no-trailing-whitespace": true,

        "no-unsafe-finally": true,

        "member-ordering": [

            true,

            {

                "order": "instance-sandwich"

            }

        ],

        "one-line": [

            true,

            "check-open-brace",

            "check-whitespace"

        ],

        "quotemark": [

            true,

            "single"

        ],

        "semicolon": [

            true,

            "always"

        ],

        "triple-equals": [

            true,

            "allow-null-check"

        ],

        "variable-name": [

            true,

            "ban-keywords"

        ],

        "whitespace": [

            true,

            "check-branch",

            "check-decl",

            "check-operator",

            "check-separator",

            "check-type"

        ]

    },

    "rules": {

        "class-name": false,

        "comment-format": [

            true,

            "check-space"

        ],

        "indent": [

            true,

            "spaces"

        ],

        "naming-convention": [

            true,

            {

                "type": "variable",

                "modifiers": "local",

                "format": "snake_case"

            },

            {

                "type": "function",

                "format": ["camelCase", "PascalCase"]

            },

            {

                "type": "parameter",

                "format": "snake_case"

            },

            {

                "type": "parameterProperty",

                "format": "camelCase"

            },

            {

                "type": "property",

                "format": "camelCase"

            },

            {

                "type": "property",

                "modifiers": "private",

                "format": "camelCase",

                "leadingUnderscore": "allow"

            },

            {

                "type": "property",

                "modifiers": "protected",

                "format": "camelCase",

                "leadingUnderscore": "allow"

            },

            {

                "type": "property",

                "modifiers": ["static", "readonly"],

                "format": "UPPER_CASE"

            },

            {

                "type": "property",

                "modifiers": ["private", "static", "readonly"],

                "format": "UPPER_CASE"

            },

            {

                "type": "method",

                "format": "camelCase"

            },

            {

                "type": "method",

                "modifiers": "private",

                "format": "camelCase",

                "leadingUnderscore": "allow"

            },

            {

                "type": "method",

                "modifiers": "protected",

                "format": "camelCase",

                "leadingUnderscore": "allow"

            },

            {

                "type": "enumMember",

                "format": "PascalCase"

            },

            {

                "type": "class",

                "format": "PascalCase"

            }

        ],

        "no-eval": true,

        "no-internal-module": true,

        "no-trailing-whitespace": true,

        "no-unsafe-finally": true,

        "no-var-keyword": true,

        "one-line": [

            true,

            "check-open-brace",

            "check-whitespace"

        ],

        "quotemark": [

            true,

            "single"

        ],

        "semicolon": [

            true,

            "always"

        ],

        "triple-equals": [

            true,

            "allow-null-check"

        ],

        "typedef-whitespace": [

            true,

            {

                "call-signature": "nospace",

                "index-signature": "nospace",

                "parameter": "nospace",

                "property-declaration": "nospace",

                "variable-declaration": "nospace"

            }

        ],

        "variable-name": [

            true,

            "ban-keywords"

        ],

        "whitespace": [

            true,

            "check-branch",

            "check-decl",

            "check-operator",

            "check-separator",

            "check-type"

        ]

    },

    "linterOptions": {

        "exclude": [

            "**/*.d.ts",

            "src/core/jquery-tooltipster.ts",

            "src/core/ui/shapes/PresetShape.ts",

            "src/model/QWebLib.ts",

            "src/model/CommonLib.ts",

            "src/displayr_packages/displayr-interfaces/QServerRequests.ts",

            "src/displayr_packages/displayr-interfaces/QServerRequestsCommon.ts",

            "src/model/QServerRequestsDesktop.ts",

            "src/ui/wordcloud/lib/d3.layout.cloud.ts"

        ]

    }

}